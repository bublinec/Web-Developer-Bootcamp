<%- include("partials/header") %> 

<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form class="ui form" action="/blogs" method="post">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Name" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[img_url]" placeholder="Image url">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="12"  placeholder="Write something.." required></textarea>
        </div>
        <div class="field">
            <input class="ui red big basic button" type="submit">
        </div>
    </form>
</div>

<%- include("partials/footer") %> 
