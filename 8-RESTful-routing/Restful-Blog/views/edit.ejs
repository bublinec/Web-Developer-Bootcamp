<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit: <%= blog.title %> </div>
    <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %> " required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[img_url]" value="<%= blog.img_url %> ">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="12" required><%= blog.body %> </textarea>
        </div>
        <div class="field">
            <input class="ui red big basic button" type="submit">
        </div>
    </form>
</div>

<%- include("partials/footer") %>