<%- include("partials/header") %> 

<div class="ui main text container">
    <div class="ui huge header">Restful Blog</div>
    <div class="ui top attached segment">
        <div class="ui divided items">

            <% blogs.forEach(function (blog){ %>
                <div class="item">
                    <div class="ui medium image">
                        <img src="<%= blog.img_url %>" alt="<%= blog.title + "image" %> ">
                    </div>
                    <div class="content">
                        <a href="/blogs/<%= blog._id %>" class="header"><%= blog.title %></a>
                        <div class="meta">
                            <span><%= blog.date.toDateString() %> </span>
                        </div>
                        <div class="description">
                            <p><%- blog.body.substring(0, 165) %>...</p>
                        </div>
                        <div class="extra">
                            <a href="/blogs/<%= blog._id %>" class="ui large floated basic green button">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %> 

        </div>
    </div>
</div>

<%- include("partials/footer") %> 
